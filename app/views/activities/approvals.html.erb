
 <div class="container">

<p id="notice"><%= notice %></p>

 <!-- Example DataTables Card-->
 <br/>
 <br/>

     <% if @approvals.empty? %>

       <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Staff Work Activity </div>
        <div class="card-body">
                    <h1> No activities to approve </h1>

                  </div>
                  
                  </div>
                 

                 
               <% else %>

      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Staff Work Activity</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Staff Name</th>
                   <th>Department</th>
                  <th>Time from</th>
                  <th>Time to </th>
                  <th>Activity</th>
                  <th>Remarks</th>
                   <th>Show </th>
                    
                      
                         <th> status </th>
                         <th>Approval </th>
                           
               
                  
                </tr>
              </thead>
              <tfoot>
                <tr>
                <th>Staff Name</th>
                   <th>Department</th>
                    <th>Time from</th>
                  <th>Time to </th>
                  <th>Activity</th>
                  <th>Remarks</th>
                 
                   <th>Show </th>
                     
                     
                         <th>status </th>
                         <th>Approval </th>
                        
                
                </tr>
              </tfoot>
               <tbody>

                 <% @approvals.each do |activity| %>
                     <tr>
       <td><%= activity.user.first_name %> <%= activity.user.last_name %></td>
        <td><%= activity.user.department.name %></td>
        <td><%= activity.time_from.strftime('%a, %d %b %Y %H:%M:%S') %></td>
        <td><%= activity.time_to.strftime('%a, %d %b %Y %H:%M:%S') %></td>
        <td><%= activity.detail %></td>
        <td><%= activity.remarks %></td>
         

        <td><%= link_to 'Show', activity %></td>
      
       
           <td>  <%=  activity.status %> </td>

          <%if activity.user.s_role?%>

             


              <td><%= link_to 'Approval', edit_activity_path(activity) %></td>

           <%else %>

           
           

                <td><i style="color:red"> **disabled**</i></td>

           <%end %>


          

           
        

      </tr>

   <% end %>


            
             </tbody>

            </table>
            </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            <%= link_to 'New Activity', new_activity_path %>

            </div>





<% end %>


</div>
