
 <div class="container">

<p id="notice"><%= notice %></p>

 <!-- Example DataTables Card-->
 <br/>
 <br/>


<% if @staffrejected.empty? %>

       <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Staff Work Activity </div>
        <div class="card-body">
                    <h1> No rejected activities </h1>

                  </div>
                  
                  </div>
                 

                 
               <% else %>
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Staff Work Activity</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Staff Name</th>
                  
                  <th>Activity</th>
                    <th>Remarks</th>
                   
                         <th>Status </th>
                          <th>Detail </th>
                           
             
                  
                </tr>
              </thead>
              <tfoot>
                <tr>
                <th>Staff Name</th>

                   
                  <th>Activity</th>
                  <th>Remarks</th>
                 
                  
                         <th>Status </th>
                          <th>Detail </th>
                         
                
                </tr>
              </tfoot>
               <tbody>

                 <% @staffrejected.each do |activity| %>
                     <tr>
       <td><%= activity.user.first_name %> <%= activity.user.last_name %></td>
       
        <td><%= activity.detail %></td>
        <td><%= activity.remarks %></td>
         

      

          
           <td>  <%=  activity.status %> </td>

           <td><%= link_to 'View', activity %></td>

          

       

             

      </tr>

   <% end %>


            
             </tbody>

            </table>
            </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            <%= link_to 'New Activity', new_activity_path %>

            </div>



<% end %>




</div>
