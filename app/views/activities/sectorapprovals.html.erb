
 <div class="container">

<p id="notice"><%= notice %></p>

 <!-- Example DataTables Card-->
 <br/>
 <br/>

  <% if @sectapprovals.empty? %>

       <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Staff Work Activity </div>
        <div class="card-body">

                    <h1> No activities to approve </h1>

                  </div>
                  
                 
                  </div>  

                 
               <% else %>

      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Staff Work Activity</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Staff Name</th>
                   <th>Department</th>
                 
                  <th>Activity</th>
                 
                   <th>Detail </th>
                     <<th>Approval </th>
                    
                         <th>status </th>
                         <th> date created </th>
                           
                 
                  
                </tr>
              </thead>
              <tfoot>
                <tr>
                <th>Staff Name</th>
                   <th>Department</th>
                    
                  <th>Activity</th>
                 
                 
                   <th>Detail </th>
                     <th>Approval </th>
                    
                         <th>status </th>
                         <th> date created </th>
                          
                
                </tr>
              </tfoot>
               <tbody>

                 <% @sectapprovals.each do |activity| %>
                     <tr>
       <td><%= activity.user.first_name %> <%= activity.user.last_name %></td>
        <td><%= activity.user.department.name %></td>
        
        <td><%= activity.detail %></td>
      
         

        <td><%= link_to 'View', activity %></td>
        <td><%= link_to 'approval', edit_activity_path(activity) %></td>
        
          

 



           <td>  <%=  activity.status %> </td>

                <td><%= activity.created_at.strftime('%a, %d %b %Y %H:%M:%S') %></td>

          

      </tr>

   <% end %>


            
             </tbody>

            </table>
            </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            <%= link_to 'New Activity', new_activity_path %>

            </div>



<% end %>





</div>